+    }
+
+    gst_buffer_unref (buffer);
+
+    fail_unless (gst_pad_push_event (srcpad, gst_event_new_eos ()));
+
+    /* All buffers must be there now */
+    fail_unless_equals_int (g_list_length (buffers), 10);
